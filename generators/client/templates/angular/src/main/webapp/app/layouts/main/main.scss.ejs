.wrapper {
  width: 100vw;
  min-height: 100vh;
}

.ant-layout-sider {
  background: rgba(0, 0, 0, 0.1);
}

:host ::ng-deep .trigger {
  width: 40px;
  font-size: 18px;
  padding: 0;
  cursor: pointer;
  transition: color .3s;
  color: #FFF;
  border-radius: 4px;
  float: left;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  .anticon {
    line-height: 40px;
  }
}

:host ::ng-deep .trigger:hover {
  background-color: rgba(255,255,255,.2);
}

.top-nav-wrap {
  width: 100%;
  height: 64px;
  padding: 12px 12px 12px 0;
  float: left;
  .logo {
    height: 100%;
    margin: 0;
  }
  .main {
    background-color: transparent;
    > div {
      width: 100%;
      height: 100%;
      display: flex;
    }
  }
}

.top-nav {
  margin: 0;
  padding: 0;
  display: flex;
  align-items: center;
  float: right;
}

.top-nav > li {
  display: inline-block;
  vertical-align: middle;
}

.scrollable-main-content {
  width: 100%;
  height: calc(100vh - 64px);
  overflow: auto;
  float: left;
}

.top-nav-userinfo {
  padding: 8px;
  color: #ffffff;
}

nz-header {
  background-color: #1890ff;
  padding: 0;
  width: 100%;
  position: relative;
  box-shadow: 0 1px 10px rgba(0,0,0,.2);
}

.scrollable-main-sider {
  height: calc(100vh - 64px);
  overflow-y: auto;
  overflow-x: hidden;
}

.ant-menu-inline .ant-menu-item, .ant-menu-inline .ant-menu-submenu-title {
  width: 100%;
}

.ant-menu-submenu-title {
  width: 100%;
}

.ant-menu-item {
  width: 100%;
}

.search-box {
  height: 100%;
  float: left;
  margin: 0 10px;
  flex: 1;
  flex-grow: 100;
  position: relative;
  display: flex;
  align-items: center;
}

.container-box {
  width: 100%;
  min-height: calc(100vh - 64px);
  float: left;
  overflow: hidden;
  padding: 0;
}

nz-sider {
  width: 200px;
  height: 100%;
  overflow-y: auto;
  display: block;
  float: left;
}

.ant-layout-header {
  line-height: 40px;
}

/deep/ ul {
  padding: 0;
}
/deep/ li {
  list-style-type :none;
}

.user-info {
  margin-left: 10px;
}
